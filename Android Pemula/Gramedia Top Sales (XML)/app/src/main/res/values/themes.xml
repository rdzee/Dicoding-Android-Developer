<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BookIt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your dark theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/blue_on_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_secondary_dark</item>
        <item name="colorOnSecondary">@color/blue_dark</item>
    </style>

    <style name="BigTittleStyle">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TittleStyle">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DescStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/blue_secondary_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.App.Splashscreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.BookIt</item>
    </style>
</resources>